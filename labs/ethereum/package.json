{
  "name": "crypto-course-ethereum-lab",
  "version": "1.0.0",
  "type": "module",
  "description": "Ethereum development lab for Crypto Fundamentals course",
  "private": true,
  "engines": {
    "node": ">=22.10.0"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:forge": "forge test",
    "node": "npx hardhat node",
    "setup:forge-std": "test -d lib/forge-std || git clone --depth 1 https://github.com/foundry-rs/forge-std.git lib/forge-std && test -L node_modules/forge-std || ln -s ../lib/forge-std node_modules/forge-std",
    "postinstall": "npm run setup:forge-std"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.3.0",
    "@nomicfoundation/hardhat-ignition": "^3.0.7",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.7",
    "@nomicfoundation/hardhat-keystore": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-node-test-runner": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.2",
    "@nomicfoundation/hardhat-verify": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^3.0.2",
    "@nomicfoundation/hardhat-viem-assertions": "^3.0.5",
    "@nomicfoundation/ignition-core": "^3.0.7",
    "@openzeppelin/contracts": "^5.4.0",
    "ethers": "^6.16.0",
    "hardhat": "^3.1.7",
    "viem": "^2.45.1"
  }
}
